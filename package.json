{
	"name": "pahana-edu",
	"version": "1.0.0",
	"main": "index.js",
	"directories": {
		"doc": "docs"
	},
	"scripts": {
		"dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
		"dev:frontend": "cd frontend && npm run dev",
		"dev:backend": "cd backend && mvn tomcat7:run",
		"build": "npm run build:frontend && npm run build:backend",
		"build:frontend": "cd frontend && npm run build",
		"build:backend": "cd backend && mvn clean package",
		"install:all": "npm install && cd frontend && npm install",
		"clean": "cd frontend && rm -rf node_modules dist && cd ../backend && mvn clean"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/DevAnuhas/pahana-edu.git"
	},
	"author": "Anuhas Dissanayake",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/DevAnuhas/pahana-edu/issues"
	},
	"homepage": "https://github.com/DevAnuhas/pahana-edu#readme",
	"description": "",
	"devDependencies": {
		"concurrently": "^9.2.0",
		"cross-env": "^10.0.0"
	}
}
